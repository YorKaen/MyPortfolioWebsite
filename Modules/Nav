

Адаптивная навигация - в правом углу\по центру\в колонке
/* Большие экраны */
.navigation {
	display: flex;
	flex-flow: row wrap;
	/* Выставляет элементы к концу строки по главной оси */
	justify-content: flex-end;
}
.navigation a {
	text-decoration: none;
	display: block;
	}
.navigation a:hover {
	background: #1565C0;
}
/* Средние экраны */
@media all and (max-width: 800px) {
	.navigation {
		/* На экранах средних размеров мы их равномерно центрируем, распределяя между ними пустое место */
		justify-content: space-around;
	}
}/* Маленькие экраны */
@media all and (max-width: 500px) {
	.navigation {
		/* На малых экранах мы выставляем элементы в колонку */
		flex-direction: column;
	}
}